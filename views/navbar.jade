nav.navbar.navbar-default(role='navigation')
  .container
    
    //  Brand and toggle get grouped for better mobile display 
    .navbar-header
    

      button.navbar-toggle(type='button', ng-click="navbar.isCollapsed = !navbar.isCollapsed", data-toggle='collapse', data-target='.navbar-ex1-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='#') Gnopher
    
    
    
    // Collect the nav links, forms, and other content for toggling 
    .collapse.navbar-collapse.navbar-ex1-collapse(collapse="navbar.isCollapsed",ng-controller="NavbarCtrl")
      ul.nav.navbar-nav
        li(ng-class="{active: isActive('/candidates')}")
          a(href='/candidates') Candidates
        li(ng-class="{ active: isActive('/positions')}")
          a(href='/positions') Positions
    
    
    
      ul.nav.navbar-nav.navbar-right
        
        
