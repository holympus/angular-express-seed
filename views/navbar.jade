        // logged in:
        li.dropdown(ng-show="LoggedIn.success")
          a.dropdown-toggle(href='#', data-toggle='dropdown')
            | {{LoggedIn.username}}
            b.caret
          ul.dropdown-menu
            li(ng-repeat="choice in navigation.profile",ng-class="{ active: isActive(choice.href)}")
              a(href="{{choice.href}}") {{choice.text}}
